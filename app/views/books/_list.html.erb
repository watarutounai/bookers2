        <%# else %>
          <%#= link_to user_path(current_user.id) do %>
           <!--<i class="fas fa-user-cog"></i>-->
          <%# end %>
        <%# end %>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>